---
import Layout from "../layouts/layout.astro";
import Logo from "../assets/logo.svg";
import HeroImage from "../assets/hero.jpg";
---

<Layout>
  <main>
    <article>
      <h1>Island-Made. Future-Ready.</h1>
      <p>
        Come curious. Leave connected. The Island Connectivity Hub is your space
        to learn, work, create, and care. Built for island life and designed for
        what's next.
      </p>
    </article>

    <figure>
      <Logo />
    </figure>
  </main>
</Layout>

<style>
  main {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-image: url("../assets/stonington-hero.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: var(--space-8);
    overflow: hidden;
  }

  main::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 44, 66, 0.7) 0%,
      rgba(0, 44, 66, 0.5) 50%,
      rgba(0, 44, 66, 0.4) 100%
    );
    z-index: 1;
  }

  article {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    z-index: 2;
    text-align: center;
    max-width: 900px;
    margin-inline: auto;
  }

  article h1 {
    color: white;
  }

  article p {
    color: white;
    text-wrap: balance;
  }

  figure {
    position: absolute;
    bottom: var(--space-8);
    left: var(--space-8);
    z-index: 2;
    width: 120px;
    height: auto;
  }

  @media (max-width: 768px) {
    main {
      padding: var(--space-6);
    }

    figure {
      bottom: var(--space-6);
      left: var(--space-6);
      width: 100px;
    }

    article h1 {
      margin-bottom: var(--space-4);
    }
  }

  @media (max-width: 480px) {
    main {
      padding: var(--space-4);
    }

    figure {
      bottom: var(--space-4);
      left: var(--space-4);
      width: 80px;
    }
  }
</style>
