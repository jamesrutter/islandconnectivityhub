      url("/photos/snowy-stonington.jpeg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  .hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at top left,
      rgba(255, 255, 255, 0.55),
      transparent 55%
    );
    z-index: 0;
    pointer-events: none;
  }

  .snow-overlay {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='160' height='160' viewBox='0 0 160 160' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.55'%3E%3Ccircle cx='20' cy='20' r='2'/%3E%3Ccircle cx='80' cy='40' r='3'/%3E%3Ccircle cx='140' cy='30' r='2'/%3E%3Ccircle cx='50' cy='110' r='2'/%3E%3Ccircle cx='120' cy='120' r='3'/%3E%3Ccircle cx='30' cy='150' r='2'/%3E%3C/g%3E%3C/svg%3E");
    background-size: 220px 220px;
    animation: drift 24s linear infinite;
    z-index: 1;
    opacity: 0.85;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 520px;
    color: #f4fbff;
  }

  .hero-content h1 {
    font-size: clamp(3rem, 7vw, 4.75rem);
    line-height: 1;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

