    .holiday-page {
      gap: 5rem;
    }

    .hero {
      padding: clamp(2.5rem, 8vw, 4rem) 1.75rem;
    }

    .cta-row {
      flex-direction: column;
      align-items: stretch;
    }

    .intro-card,
    .visit-card {
      border-radius: 1.5rem;
    }

    .schedule-card {
      padding: 1.5rem;
    }
