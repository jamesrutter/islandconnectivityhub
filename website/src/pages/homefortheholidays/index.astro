    box-shadow: 0 4px 8px rgba(13, 59, 102, 0.2);
  }

  .event-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(13, 59, 102, 0.3);
  }

  .holiday-gallery {
    padding-inline: clamp(1.5rem, 5vw, 6rem);
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: clamp(1.25rem, 3vw, 2rem);
  }

  .gallery-card {
    position: relative;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(5, 45, 76, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.9);
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(10px);
  }

  .gallery-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .sponsors {
    padding-inline: clamp(1.5rem, 5vw, 6rem);
  }

  .sponsor-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1.5rem;
    align-items: stretch;
  }

  .sponsor-card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 1.25rem;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 25px rgba(13, 59, 102, 0.08);
    border: 1px solid rgba(13, 59, 102, 0.08);
